<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="750.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ims.PrimaryController">
    <children>
        <Text fill="BLACK" layoutX="40.0" layoutY="40.0" stroke="BLACK" strokeWidth="0.0" text="IMS DASHBOARD">
            <font>
                <Font name="Verdana" size="20.0"/>
            </font>
        </Text>

        <TextField fx:id="searchField" promptText="Search..." layoutX="40.0" layoutY="80.0"/>

        <HBox spacing="10" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="120.0">
            <Button text="Add" />
            <Button text="Edit" />
            <Button text="Delete" />
        </HBox>

        <TableView fx:id="tableView" layoutX="40.0" layoutY="160.0">
            <columns>
                <TableColumn text="Item Number"/>
                <TableColumn text="Item Name"/>
                <TableColumn text="Item Price"/>
                <TableColumn text="Count"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
